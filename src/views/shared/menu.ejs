<div snap-drawer>
    <center><img class="logo" src="/img/logo.png"></center>
    <ul class="nav">
        <li ng-click=""><a title="Home" href="/home"><i class="icon-home icon-large pull-left"></i>Home</a></li>
        <li ng-click="gotoComposePost()" snap-close><a title="Write Something..." href="#" class="compose"><i class="icon-edit icon-large pull-left"></i>Write Something...</a></li>

        <li class="separator" ng-show="homePage">My Groups</li>
        <li class="separator" ng-show="groupPage">{{ group.name }}</li>
        <li class="separator" ng-show="isGroupAdmin">{{ group.name }}'s Settings</li>

        <!--Home-->
        <li ng-click="gotoCreateGroup()" ng-show="homePage"><a title="New Group" href="#"><i class="icon-plus icon-large pull-left"></i>New Group</a></li>
        <li ng-click="gotoJoinGroup()" ng-show="homePage"><a title="Join Group" href="#"><i class="icon-list-alt icon-large pull-left"></i>Join Group</a></li>


        <!--Group-->
        <li ng-click="switchView(partialEnum.news)" snap-close ng-show="groupPage"><a ng-class="{'active': view == 'news'}" title="News" href="#"><i class="icon-bullhorn icon-large pull-left"></i>News</a></li>
        <li ng-click="switchView(partialEnum.gallery)" snap-close ng-show="groupPage"><a ng-class="{'active': view == 'gallery'}" title="Gallery" href="#"><i class="icon-th icon-large pull-left"></i>Gallery</a></li>
        <li ng-click="switchView(partialEnum.meters)" snap-close ng-show="groupPage"><a ng-class="{'active': view == 'meters'}" title="Meters" href="#"><i class="icon-signal icon-large pull-left"></i>Meters</a></li>
        <li ng-click="switchView(partialEnum.todos)" snap-close ng-show="groupPage"><a ng-class="{'active': view == 'todos'}" title="Todos" href="#"><i class="icon-check icon-large pull-left"></i>Todos</a></li>

        <li ng-click="gotoGroupSettings()" ng-show="showSettings"><a title="Settings" href="#"><i class="icon-cog icon-large pull-left"></i>Group Settings</a></li>

        <!--Settings-->
        <li ng-click="gotoTab('General')" snap-close ng-show="isGroupAdmin"><a ng-class="{'active': tab == 'General'}" title="General" href="#"><i class="icon-tasks icon-large pull-left"></i>General</a></li>
        <li ng-click="gotoTab('Members')" snap-close ng-show="isGroupAdmin"><a ng-class="{'active': tab == 'Members'}" title="Members" href="#"><i class="icon-group icon-large pull-left"></i>Members</a></li>
        <li ng-click="gotoTab('Meters')" snap-close ng-show="isGroupAdmin"><a ng-class="{'active': tab == 'Meters'}" title="Meters" href="#"><i class="icon-signal icon-large pull-left"></i>Meters</a></li>

    </ul>
</div>
<div class="container-fluid" snap-content snap-options="snapOpts">