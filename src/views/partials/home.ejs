

    <!-- Header -->
<%- include ../shared/header.ejs %>

    <!-- Content -->
<div class="container-fluid main">
    <h4 class="page-title">My Groups</h4>
    <ul class="list" ng-show="groups.length">
        <li ng-click="moveToGroup(group)" class="list-item" ng-repeat="group in groups">
            <div class="img-continer pull-left">
                <img ng-src="{{group.image}}" alt="{{group.name}}">
            </div>

            <a href="#" class="title">
                <span class="badge badge-warning">{{group.posts.length}}</span>
                <i class="icon-chevron-right"></i>
                {{group.name}}
            </a>
        </li>
    </ul>
    <center><h4 class="page-title" ng-show="groups.length == 0 && !isNoGroups">Loading...</h4></center>
    <center><h4 class="page-title" ng-show="groups.length == 0 && isNoGroups">You don't have any groups</h4></center>
</div>

<!-- Footer -->
<%- include ../shared/footer.ejs %>
