
<!-- Header -->
<div>
    <h1 style="text-align: center;">
        <a href="/" style="color: #000000; text-decoration: none">Goaa</a>
    </h1>
</div>

<hr/>

<div class="container-fluid">

    <form class="form-signin" ng-submit="login()">
        <input type="text" class="input-block-level" placeholder="Username" ng-model="form.username">
        <input type="password" class="input-block-level" placeholder="Password" ng-model="form.password">
        <label class="checkbox">
            <input type="checkbox" value="remember-me" ng-model="form.remeberme"> Remember me
        </label>
        <p ng-show="loginFailed" style="color:red; text-align: center;"><strong>Username or password are incorrect</strong></p>
        <button class="btn btn-large btn-primary btn-block" type="submit">Sign In</button>
    </form>

    <div class="row-fluid">
        <h4>New here?</h4>
        <a class="btn btn-large btn-success btn-block" href="/signup">Create New Account</a>
    </div>
</div>