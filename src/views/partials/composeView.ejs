<div class="container-fluid">

    <!-- Header -->
    <%- include ../shared/header.ejs %>

    <div class="row-fluid bottom-space">
        <h4 class="page-title pull-left">Compose</h4>
        <button class="btn btn-medium btn-info pull-right" type="submit">Send</button>
    </div>

    <center>
        <div class="container-fluid">
            <form class="form-signin" ng-submit="makeCompose()" enctype="multipart/form-data">
                <select   ng-model="compose.groupID" class="span1">
                    <option ng-selected="isSelected(group)" ng-repeat="group in groups" value={{group._id}}>{{group.name}}</option>
                </select>

                <textarea  ng-model=compose.data rows="8" placeholder="Write something..." class="span1"></textarea>


                <div class="alert alert-error" ng-show="isShowError">
                    <strong>Error</strong> {{errorMsg}}
                </div>
                <div image-uploader image="compose.image" image-upload-settings="imageUploadSettings"></div>
                <div class="row-fluid">&nbsp</div>
            </form>

        </div>
    </center>

    <!-- Footer -->
    <%- include ../shared/footer.ejs %>
</div>