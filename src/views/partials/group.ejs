<!-- Header -->
<%- include ../shared/header.ejs %>

<center class="top-buttons">
    <div class="btn-group">
        <button ng-click="gotoPartial(partialEnum.gallery)" class="btn btn-medium"><i class="icon-th icon-white"></i> Gallery</button>
        <button ng-click="gotoPartial(partialEnum.meters)" class="btn btn-medium"><i class="icon-signal icon-white"></i> Meters</button>
        <button ng-click="gotoPartial(partialEnum.todos)" class="btn btn-medium"><i class="icon-check icon-white"></i> Todos</button>
        <button class="btn btn-medium"><i class="icon-pencil icon-white"></i> Compose</button>
    </div>
</center>

<!-- News Content -->
<div class="container-fluid" ng-show="isShowNews(view)">
    <div class="row-fluid">
        <div class="offset6">
            <h3>News</h3>
        </div>
    </div>
    <div class="row-fluid">
        <ul class="thumbnails">
            <li class="span4" ng-repeat="post in group.posts">
                <div news-thumb post="post"></div>
            </li>
        </ul>
    </div>
    <center><h4 ng-show="isLoading">Loading...</h4></center>
    <center><h4 ng-show="isShowNoNews(group.posts, isLoading)">No News Yet</h4></center>
</div>

<!-- Gallery Content -->
<div class="container-fluid" ng-show="isShowPartial(view, 'gallery')">
    <div class="row-fluid">
        <div class="offset6">
            <h3>Gallery</h3>
        </div>
    </div>
    <div class="row-fluid">
        <ul class="thumbnails">
            <li class="span4" ng-repeat="post in group.posts">
                <div gallery-thumb post="post"></div>
            </li>
        </ul>
    </div>
    <center><h4 ng-show="isLoading">Loading...</h4></center>
    <center><h4 ng-show="isShowNoPhotos(group.posts, isLoading)">No Photos Yet</h4></center>
</div>

<!-- Meters Content -->
<div class="container-fluid" ng-show="isShowPartial(view, 'meters')">
    <div class="row-fluid">
        <div class="offset6">
            <h3>Meters</h3>
        </div>
    </div>
    <ul class="list">
        <li class="list-item" ng-click="gotoMeter(meter)" ng-repeat="meter in group.meters">
            <a href="#" class="title">
                <i class="icon-chevron-right"></i>
                {{meter.name}}
            </a>
        </li>
    </ul>
    <center><h4 ng-show="isLoading">Loading...</h4></center>
    <center><h4 ng-show="isShowNoMeters(group.meters, isLoading)">No Meters</h4></center>
</div>

<!-- Todos Content -->
<div class="container-fluid" ng-show="isShowPartial(view, 'todos')">
    <div class="row-fluid">
        <div class="offset6">
            <h3>Todo's</h3>
        </div>
    </div>
</div>

<!-- Footer -->
<div class="navbar navbar-fixed-bottom static">
    <div class="navbar-inner">
        <div class="continer">
            <ul class="nav">
                <li ng-click="gotoGroupSettings()"><a href="#"><i class="icon-beer"></i> Group Settings</a></li>
            </ul>
        </div>
    </div>
</div>

<!-- Footer -->
<%- include ../shared/footer.ejs %>