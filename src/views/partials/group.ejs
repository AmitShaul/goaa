<!-- Header -->
<%- include ../shared/header.ejs %>

<center class="top-buttons">
<div class="btn-group">
    <button class="btn btn-medium"><i class="icon-th icon-white"></i> Gallery</button>
    <button class="btn btn-medium"><i class="icon-signal icon-white"></i> Meters</button>
    <button class="btn btn-medium"><i class="icon-check icon-white"></i> Todos</button>
    <button class="btn btn-medium"><i class="icon-pencil icon-white"></i> Compose</button>
</div>
</center>

<!-- Content -->
<div class="container-fluid">
    <div class="row-fluid">
        <div class="offset6">
            <h3>News</h3>
        </div>
    </div>
    <div class="row-fluid">
        <ul class="thumbnails">
            <li class="span4" ng-repeat="post in group.posts">
                <div class="thumbnail well">
                    <div class="row-fluid">
                        <h6>{{post.username}} <span class="pull-right">{{post.date | fromNow}}</span></h6>

                        <span ng-show="isTooBigMessage(post.message)">
                            <h5 ng-show="!post.isShowFull" ng-bind="toShortStr(post)"></h5>
                            <h5 ng-show="post.isShowFull" ng-bind="post.message"></h5>
                            <button ng-click="toggleTextLength(post)" class="btn btn-link">
                                <span ng-show="!post.isShowFull">more</span>
                                <span ng-show="post.isShowFull">less</span>
                            </button>
                        </span>

                        <h5 ng-show="!isTooBigMessage(post.message)" ng-bind="post.message"></h5>

                        <div class="row-fluid">
                            <center>
                                <img ng-show="post.photoUrl" ng-src="{{post.photoUrl}}" src="" alt="" />
                            </center>
                        </div>

                    </div>
                </div>
            </li>
        </ul>
    </div>
</div>

<div class="navbar navbar-fixed-bottom static">
    <div class="navbar-inner">
        <div class="continer">
            <ul class="nav">
                <li><a href="#"><i class="icon-beer"></i> Group Settings</a></li>
            </ul>
        </div>
    </div>
</div>

<!-- Footer -->
<%- include ../shared/footer.ejs %>