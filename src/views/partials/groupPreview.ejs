
<!-- Header -->
<%- include ../shared/header.ejs %>


<center class="top-buttons">
    <h4>Group Preview - {{group.name}}</h4>
</center>


<!-- Content -->
<div class="container-fluid main">
    <div class="row-fluid">
        <img src="{{group.image}}" alt="Group Image"/>
    </div>

    <div class="row-fluid">
        <div class="google-map"
             center="centerProperty"
             zoom="zoomProperty"
             markers="markersProperty"
             latitude="clickedLatitudeProperty"
             longitude="clickedLongitudeProperty"
             mark-click="true"
             draggable="true">
        </div>
    </div>
    <div class="row-fluid">&nbsp;</div>
    <div class="row-fluid">
        <button class="btn btn-large btn-block btn-info">Join</button>
    </div>
</div>




<!-- Footer -->
<%- include ../shared/footer.ejs %>