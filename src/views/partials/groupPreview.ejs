
<!-- Header -->
<%- include ../shared/header.ejs %>

<!-- Content -->
<div class="container-fluid main">
    <div class="row-fluid cover-image-wrapper">
        <img src="{{group.image}}" alt="Group Image"/>
        <h4>{{group.name}}</h4>
    </div>

    <div group-address="group.address"></div>

    <div google-map
         address="group.addressString">
     </div>

    <div class="row-fluid">
        <button class="btn btn-large btn-block btn-info"
                ng-class="joinDisabledEnabledClass"
                ng-click="joinGroup(group, account.user()._id)"
                >Join</button>
    </div>

    <div class="row-fluid">&nbsp;</div>
    <div class="row-fluid">
        <div class="alert alert-error span12" ng-show="errorMsg">
            <strong>Oops,</strong> {{errorMsg}}
        </div>
    </div>
</div>




<!-- Footer -->
<%- include ../shared/footer.ejs %>