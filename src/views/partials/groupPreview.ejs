
<!-- Header -->
<%- include ../shared/header.ejs %>

<!-- Content -->
<div class="container-fluid main">
    <div class="row-fluid cover-image-wrapper">
        <img src="{{group.image}}" alt="Group Image"/>
        <h4>{{group.name}}</h4>
    </div>

    <center class="row-fluid bottom-space address">
        <p class="underline">Location</p>
        <p>{{group.address.street}} {{group.address.house}}, {{group.address.city}}</p>
        <p>{{group.address.country}}</p>
    </center>

    <div class="row-fluid google-map-wrapper bottom-space">
        <div id="google-map" class="google-map"></div>
    </div>

    <div class="row-fluid">
        <button class="btn btn-large btn-block btn-info">Join</button>
    </div>
</div>




<!-- Footer -->
<%- include ../shared/footer.ejs %>