
<!-- Header -->
<%- include ../shared/header.ejs %>


<div class="container-fluid">

    <form class="form-signin"   ng-submit="groupcreator()" enctype="multipart/form-data">
        <input type="text" required class="input-block-level" placeholder="Group name" ng-model="Group.name">

        <p>Address:</p>
        <input type="text" required class="input-block-level" placeholder="country" ng-model="Group.address.country">
        <input type="text"  required class="input-block-level" placeholder="city" ng-model="Group.address.city">
        <input type="text" required class="input-block-level" placeholder="street" ng-model="Group.address.street">
        <input type="number" required class="input-block-level" placeholder="House" ng-model="Group.address.house">
        <input type="number" required class="input-block-level" placeholder="Apartment" ng-model="Group.address.apartment">
        <button class="btn btn-info btn-block" ng-click="addPhoto(Group)">Add Group Photo</button>

        <img id="photoImg" width="250" height="250" alt="Group Image" />



        <p ng-show="isShowError" class="text-centered red"><strong>Group name Already exist</strong></p>
        <p ng-show="errorInDataBaseSaving" class="text-centered red"><strong>Temporary problem please try create group leter</strong></p>


        <button class="btn btn-large btn-primary btn-block" type="submit">Submit</button>
    </form>
    <div id="hiddenForm" style="display:block;">
        <form id="uploadImageForm" action="../api/upload" method="post" enctype="multipart/form-data">
            <input id="fileChooser" name="image" type="file" accept="image/*;capture=camera" />
            <input type="submit" value="Upload" style="display:block;" />
        </form>
    </div>
    <!--<iframe src="../partial">-->
